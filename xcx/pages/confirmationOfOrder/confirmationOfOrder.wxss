page{
    background-color: #faf5f5;
}
.top-div {
    width: 100%;
    height: 128rpx;
    background: rgba(55, 153, 73, 1);
}
.top-center-div {
    position:relative;
    width:84%;
    padding:33rpx 4% 63rpx 4%;
    margin:0 auto;
    background:#ffffff;
    border-radius:12rpx;

}

.left-banner-img {
    position: absolute;
    width: 150rpx;
    height: 150rpx;
}
.left-banner-img image {
    width: 100%;
    height: 100%;
}

.right-content-p {
    padding: 0 20rpx ;
    margin-left: 150rpx;
}
.name-p {
    font-size:26rpx;
    font-family:PingFang-SC-Regular;
    font-weight:400;
    color:rgba(51,51,51,1);
    line-height:40rpx;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    overflow: hidden;
}
.info-div {
    margin-top: 10rpx;
    width: 100%;
    display: flex;
}
.item-div {
    flex: 1;
}
.title-p {
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    overflow: hidden;
    font-size:24rpx;
    font-family:PingFangSC-Regular;
    font-weight:400;
    color:rgba(51,51,51,1);
    line-height:34rpx;
}
.content-p {
    font-size:19rpx;
    font-family:PingFangSC-Regular;
    font-weight:400;
    color:rgba(136,143,156,1);
    line-height:34rpx;
}
.extraction-method-wrap {
    margin-top:115rpx;
    background: #ffffff;
    padding: 37rpx 0;
}
.extraction-method-center {
    width: 96%;
    margin-left: 4%;
}
.tip-p image{
    width: 20rpx;
    height: 20rpx;
    vertical-align: middle;
    margin-right: 2%;
}
.tip-p text {
    font-size:30rpx;
    font-family:PingFangSC-Regular;
    font-weight:400;
    color:rgba(0,0,0,1);
}
.radio-wrap {
    padding:40rpx 0;
    border-bottom: 1rpx solid rgba(221,221,221,1);
}
.item-radio {
    display: inline-block;
    margin: 0 40rpx 0 20rpx
}
.radio-center image{
    width: 25rpx;
    height: 25rpx;
    margin-right: 10rpx;
}
.buy-way {
    padding: 44rpx 0 24rpx 20rpx;
    font-size: 30rpx;
    font-weight:400;
    color:rgba(51,51,51,1);
}
.payment-details-wrap {
    margin-top: 20rpx;
    background: #ffffff;
    padding: 37rpx 0;
}
.payment-details-center {
    width: 96%;
    margin-left: 4%;
}
.second-p {
    margin: 20rpx 0 0 20rpx;
    font-size:24rpx;
    font-family:PingFangSC-Regular;
    font-weight:400;
    color:rgba(51,51,51,1);
}
.second-p text {
    position: relative;
    top: 10rpx;
    margin-left: 10rpx;
    font-size:66rpx;
    font-family:PingFangSC-Medium;
    font-weight:500;
    color:rgba(51,51,51,1);
}
.payment-center-div {
    margin: 40rpx auto;
    width: 84%;
    padding: 0 4%;
    background: rgba(248, 249, 251, 1);
}
.payment-line-div {
    padding: 30rpx 0;
    font-size:24rpx;
    font-family:PingFangSC-Regular;
    font-weight:400;
    color:rgba(102,102,102,1);
    overflow: hidden;
}
.payment-line-div .left {
    font-size: 24rpx;
}
.payment-line-div .right {
    font-size: 24rpx;
}
.button {
    width: 92%;
    margin: 80rpx auto 0 auto;
    padding: 25rpx 0;
    text-align: center;
    background:rgba(55,153,73,1);
    border-radius:40rpx;
    font-size:32rpx;
    font-family:PingFangSC-Regular;
    font-weight:400;
    color:rgba(255,255,255,1);
}
