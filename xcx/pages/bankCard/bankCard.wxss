page{
    background-color: #faf5f5;
}
.bank-card-info{
    width: 84%;
    padding: 30rpx 4%;
    margin: 40rpx auto;
    background: linear-gradient(#ff7373, #f74545); /* 标准的语法（必须放在最后） */
    border-radius: 10rpx;
}
.bank-logo{
    position: absolute;
    width: 70rpx;
    height: 70rpx;
    border-radius: 50%;
}
.bank-name-div{
    position: relative;
}
.bank-name-div .bank-name{
    padding:20rpx 0 0 0;
    color: #ffffff;
    margin: 0 0 30rpx 30rpx;
}
.absolute-right-div{
    max-width: 60%;
    position: absolute;
    top: 0rpx;
    right: 4%;
    color: #fdd4d4;
    font-size: 28rpx;
    text-align:right;
}
.absolute-right-div view{
    margin-bottom: 10rpx;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    overflow: hidden;
}
.bank-id-div{
    text-align: center;
    margin-top: 55rpx;
    color: #fdd4d4;
}
.bank-id-div text{
    margin: 0 30rpx;
}
.add-bank-div{
    width: 92%;
    height: 220rpx;
    margin: 45rpx auto;
}
.add-bank-div image{
    width: 100%;
    height: 100%;
}
.relieve {
    width: 92%;
    padding: 20rpx 0;
    text-align: center;
    color: #ffffff;
    font-size: 28rpx;
    background: #07a237;
    border-radius: 10rpx;
    margin: 30rpx auto;
}