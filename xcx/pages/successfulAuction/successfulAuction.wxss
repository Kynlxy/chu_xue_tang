page{
    background-color: #faf5f5;
}
.main-top-header{
    display: flex;
    width: 100%;
    padding:0 0 35rpx 0;
    background: #ffffff;
}
.common-view{
    flex: 1;
    text-align: center;
    color: #999999;

}
.btn-active{
    border-bottom: 2px solid #0f9919;
    color: #333333;
    padding-bottom: 10rpx;
}
.recommended-products-warp .project-main-div{
    position: relative;
    width: 100%;
    height: 360rpx;
    margin-top: 30rpx;
}
.project-main-div image{
    width: 100%;
    height: 100%;
}
.project-main-div .time-view-div{
    position: absolute;
    padding: 20rpx 40rpx 20rpx 20rpx;
    top: 20rpx;
    background: rgba(8, 172, 8, 0.6);
    font-size: 30rpx;
    color: #ffffff;
    border-radius:0 30rpx 30rpx 0;
}
.project-main-div .examine{
    background: rgba(9, 92, 136, 0.6);
}
.project-main-div .end{
    background: rgba(0, 0, 0, 0.4);
}
.project-main-div .danger{
    background: rgba(255, 0, 8,0.45);
}
.project-main-div .detail-font{
    width: 92%;
    padding: 0 4%;
    position: absolute;
    bottom: 20rpx;
    font-size: 30rpx;
    color: #ffffff;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
}
.recommended-products-warp{
    margin-top: 20rpx;
}
.recommended-products-warp .buy-div{
    display: flex;
    flex-wrap: wrap;
    width: calc(100% - 2px);
    padding: 25rpx 0;
    border: 1px solid #cccccc;
    border-top: none;
    text-align: center;
    font-size: 32rpx;
    line-height: 50rpx;
}
.price-now{
    flex: 0 0 49.5%;
    height: 50rpx;
    color: #379949;
    border-right: 1px solid #cccccc;
}
.twice-div{
    flex: 0 0 49.5%;
    height: 50rpx;
    color: #379949;
    border-right: 1px solid #cccccc;
}
.twice-div:last-child{
    border-right: none;
}
.price-now text{
    font-weight: bold;
}
.time-price{
    flex:  0 0 27%;
    height: 50rpx;
    border-right: 1px solid #cccccc;
}
.place{
    flex: 0 0 22%;
    height: 50rpx;
}
.recommended-products-line{
    margin-bottom: 20rpx;
    width: 92%;
    padding: 5rpx 4% 40rpx 4%;
    background: #ffffff;
}
