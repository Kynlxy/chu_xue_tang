.name-p {
    line-height: 38rpx;
    padding: 27rpx 0 0 4%;
    font-size:28rpx;
    font-family:PingFangSC-Regular;
    font-weight:400;
    color:rgba(0,0,0,1);
}
.name-p text {
    margin-left:20rpx;
}
.goods-div {
    width: 92%;
    padding: 27rpx 0 ;
    margin: 0 4%;
    font-size:22rpx;
    font-family:PingFangSC-Regular;
    font-weight:400;
    color:rgba(152,152,152,1);
    border-bottom: 1px solid rgba(152,152,152,1);
}
.money-p {
    width: 92%;
    padding: 30rpx 0 ;
    margin: 0 4%;
    font-size:24rpx;
    font-family:PingFangSC-Regular;
    font-weight:400;
    color: rgba(0, 0, 0, 1);
    border-bottom: 1px solid rgba(0, 0, 0, 1);
    overflow: hidden;
}
.payment-type-wrap {
    width: 92%;
    padding: 40rpx 4%;
}
.tip-p {
    padding: 23rpx 0;
    font-size:20rpx;
    font-family:PingFangSC-Regular;
    font-weight:400;
    color:rgba(119,119,119,1);
    border-bottom: 1rpx solid rgba(225, 225, 225, 1);
}
.common-line-div {
    position: relative;
    padding: 26rpx 0;
    border-bottom: 1rpx solid rgba(225, 225, 225, 1);
}
.left-img {
    position: absolute;
    top: 26rpx;
    left: 0;
    width: 50rpx;
    height: 50rpx;
}
.common-line-div .left-img image {
    width: 100%;
    height: 100%;
}
.right-img {
    position: relative;
    padding-left: 80rpx;
}
.name-view {
    font-size:24rpx;
    font-family:PingFangSC-Regular;
    font-weight:400;
    color:rgba(0,0,0,1);
}
.explain-view {
    margin-top: 8rpx;
    font-size:16rpx;
    font-family:PingFangSC-Regular;
    font-weight:400;
    color:rgba(188,188,188,1);
}
.payment-img {
    position: absolute;
    right: 0;
    top: 8rpx;
    width: 34rpx;
    height: 34rpx;
}
.fixed-btn {
    position: fixed;
    bottom: 0;
    z-index: 111;
    width: 100%;
    height:90rpx;
    padding: 15rpx 0;
    background:rgba(246,246,246,1);
}
.right-font {
    float: right;
    line-height: 90rpx;
    font-size:24rpx;
    font-family:PingFangSC-Regular;
    font-weight:400;
    color:rgba(55,153,73,1);
}
.right-btn {
    margin: 10rpx 4% 0 30rpx;
    width:150rpx;
    height:70rpx;
    background:rgba(55,153,73,1);
    border-radius:6px;
    font-size:26rpx;
    font-family:PingFang-SC-Regular;
    font-weight:400;
    color:rgba(255,255,255,1);
    text-align: center;
    line-height: 70rpx;
}